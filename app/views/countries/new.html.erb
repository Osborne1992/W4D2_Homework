<br>
<%= form_for @country do |f| %>
  <%= f.label :name, "Country Name: " %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :flag_image %>
  <%= f.text_field :flag_image %>
  <br>
  <br>
  <%= f.label :size %>
  <%= f.number_field :size %>
  <br>
  <br>
  <%= f.label :population %>
  <%= f.number_field :population %>
  <br>
  <br>
  <%= f.label :national_anthem %>
  <%= f.text_field :national_anthem %>
  <br>
  <br>
  <%= f.label :currency %>
  <%= f.text_field :currency %>
  <br>
  <br>
  <%= f.label :demonym %>
  <%= f.text_field :demonym %>
  <br>
  <br>
  <%= f.submit 'Add Country' %>
<% end %>